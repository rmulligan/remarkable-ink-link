layout python

# Load environment variables from .env file
dotenv

# Automatically activate poetry's venv if present
if [ -f pyproject.toml ]; then
  export VIRTUAL_ENV=$(poetry env info --path 2>/dev/null)
  if [ -n "$VIRTUAL_ENV" ] && [ -d "$VIRTUAL_ENV" ]; then
    export PATH="$VIRTUAL_ENV/bin:$PATH"
  fi
fi

# Add project scripts directory to PATH
PATH_add scripts

# Display notice when entering the directory
echo "ðŸ”— InkLink environment activated with direnv"
echo "âœ… Environment variables loaded from .env"
echo "âœ… Poetry virtual environment activated"
