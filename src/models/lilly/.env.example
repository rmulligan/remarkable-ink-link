# Lilly Authentication Configuration
# Copy this file to .env and fill in your values

# Master password for credential encryption
LILLY_MASTER_PASSWORD=your-secure-master-password

# Proton Bridge settings
LILLY_PROTON_BRIDGE_HOST=127.0.0.1
LILLY_PROTON_BRIDGE_IMAP_PORT=1143
LILLY_PROTON_BRIDGE_SMTP_PORT=1025
LILLY_PROTON_BRIDGE_CALDAV_PORT=8443

# Proton Mail credentials
LILLY_PROTON_MAIL_USERNAME=your-email@proton.me
LILLY_PROTON_MAIL_PASSWORD=your-password

# Proton Calendar credentials
LILLY_PROTON_CALENDAR_USERNAME=your-email@proton.me
LILLY_PROTON_CALENDAR_PASSWORD=your-password

# Google API credentials
LILLY_GOOGLE_CLIENT_ID=your-client-id
LILLY_GOOGLE_CLIENT_SECRET=your-client-secret
LILLY_GOOGLE_REDIRECT_URI=http://localhost:8080/oauth2callback